{
    "name": "@meshx-org/ui",
    "description": "Component library used across MeshX Apps",
    "version": "0.0.3-unstable.9",
    "private": true,
    "workspaces": [
        "./packages/*"
    ],
    "license": "apache-2.0",
    "author": "Roland Szarka-Kov√°cs <Roland.Szarka-Kovacs@meshx.co>",
    "homepage": "https://github.com/meshx-org/meshx-ui",
    "scripts": {
        "prepare": "husky install",
        "lint": "turbo run lint",
        "build": "turbo run build",
        "clean": "turbo run clean",
        "test": "turbo run test",
        "copy-css": "copyfiles -u 1 src/**/*.css dist/",
        "storybook": "turbo run storybook",
        "publish:unstable": "lerna publish prerelease --preid unstable --yes",
        "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
        "changeset": "changeset",
        "version-packages": "changeset version",
        "release": "turbo run build --filter=docs^... && changeset publish"
    },
    "devDependencies": {
        "@babel/core": "^7.20.12",
        "@babel/preset-env": "^7.19.4",
        "@babel/preset-react": "^7.18.6",
        "@changesets/cli": "^2.26.0",
        "@typescript-eslint/eslint-plugin": "^5.49.0",
        "@typescript-eslint/parser": "^5.59.8",
        "babel-loader": "^9.1.2",
        "babel-plugin-react-native-web": "^0.19.2",
        "babel-preset-react-app": "^10.0.1",
        "copyfiles": "^2.4.1",
        "eslint": "^8.37.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-native": "^4.0.0",
        "husky": "^8",
        "metro-react-native-babel-preset": "^0.73.4",
        "prettier": "^2.8.4",
        "react-native": "0.70.6",
        "styled-components": "^5.3.6",
        "turbo": "^1.6.3",
        "typescript": "^4.9.5"
    }
}
